<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nnu.mnr.satellite.repository.IImageRepo">
    <resultMap id="imageDataMap" type="nnu.mnr.satellite.model.po.Image">
        <result property="imageId" column="image_id"/>
        <result property="productId" column="product_id"/>
        <result property="sensorId" column="sensor_id"/>
        <result property="datetime" column="image_time"/>
        <result property="tileLevelNum" column="tile_level_num"/>
<!--        <result property="tileLevels" column="tile_levels"/>-->
        <result property="crs" column="coordinate_system"/>
        <result property="band" column="band"/>
<!--        <result property="bbox" column="bounding_box"/>-->
        <result property="band" column="band"/>
        <result property="tifPath" column="tif_path"/>
        <result property="pngPath" column="png_path"/>
    </resultMap>

    <select id="getImageByProductId" resultMap="imageDataMap">
        select image_id, sensor_id, product_id, image_time, tile_level_num, tile_levels,
               coordinate_system, band, bounding_box, band, tif_path, png_path
        from image_table where product_id = #{productId};
    </select>

</mapper>