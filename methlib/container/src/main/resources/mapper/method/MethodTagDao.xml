<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ogms.dge.container.modules.method.dao.MethodTagDao">

    <delete id="deleteBatchByTagIds">
        delete from container_method_tag where tag_id in
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>

    <delete id="deleteBatchByMethodIds">
        delete from container_method_tag where method_id in
        <foreach item="methodId" collection="array" open="(" separator="," close=")">
            #{methodId}
        </foreach>
    </delete>

    <select id="queryTagIdList" resultType="long">
        select tag_id from container_method_tag where method_id = #{value}
    </select>
</mapper>