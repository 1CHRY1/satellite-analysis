<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nnu.mnr.satellite.repository.ITileRepo">
    <resultMap id="tileDataMap" type="nnu.mnr.satellite.model.po.Tile">
        <result property="tileId" column="tile_id"/>
        <result property="imageId" column="image_id"/>
        <result property="tileLevel" column="tile_level"/>
        <result property="columnId" column="column_id"/>
        <result property="rowId" column="row_id"/>
        <result property="path" column="path"/>
    </resultMap>

    <select id="getTileByImageAndLevel" resultMap="tileDataMap">
        select tile_id, image_id, tile_level, column_id, row_id, path from image_table
        where image_id = #{imageId} and tile_level = #{tileLevel};
    </select>

</mapper>